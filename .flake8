[flake8]
ignore =
         # handled by black
         E203, E501, W503,
         ANN101, ANN204, ANN401,
         # no docstring in public package
         D104,
         # One-line docstring should fit on one line with quotes
         D200,
         #  Missing docstring in __init__
         D107,
exclude =
    *_venv
    venv_*
max-cognitive-complexity = 5
per-file-ignores =
    test/*: D10,D101,D103,S101,ANN
    ./declared_env/__init__.py: F401
    ./declared_env/_exceptions.py: D107
doctests = True
good-names=e
